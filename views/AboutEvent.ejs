<script>
    // Function to check if an element is in the viewport
    function isInViewport(element) {
        const rect = element.getBoundingClientRect();
        return (
            rect.top >= 0 &&
            rect.left >= 0 &&
            rect.bottom <= (window.innerHeight || document.documentElement.clientHeight) &&
            rect.right <= (window.innerWidth || document.documentElement.clientWidth)
        );
    }

    // Track last scroll position to determine scroll direction
    let lastScrollTop = 0;

    // Function to handle scroll animation
    function checkScroll() {
        const elements = document.querySelectorAll('.timeline-panel, .timeline-image');
        const scrollTop = window.pageYOffset || document.documentElement.scrollTop;

        elements.forEach((element) => {
            if (isInViewport(element)) {
                if (scrollTop > lastScrollTop) {
                    // Scrolling down
                    element.classList.add('scroll-in-view');
                    element.classList.remove('reverse-scroll');
                } else {
                    // Scrolling up
                    element.classList.remove('scroll-in-view');
                    element.classList.add('reverse-scroll');
                }
            }
        });

        lastScrollTop = scrollTop <= 0 ? 0 : scrollTop; // For Mobile or negative scrolling
    }

    // Run on scroll and when the page loads
    window.addEventListener('scroll', checkScroll);
    window.addEventListener('load', checkScroll);
</script>

