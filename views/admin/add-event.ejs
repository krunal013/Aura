<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Event</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-900 text-gray-200">
    <%- include('userheader') %>
        <%- include('sidebar') %>
            <div class="container mx-auto p-4 sm:p-8">
                <h1 class="text-1xl sm:text-2xl font-bold  text-center">Add Event</h1>

                <form action="/admin/add-event" method="POST"
                    class="grid grid-cols-1 md:grid-cols-2 gap-6 md:gap-8 mt-5 ml-64">
                    <!-- First Column -->
                    <div>


                        <label for="title" class="block text-lg mb-4">Event Title</label>
                        <input type="text" id="title" name="title" required
                            class="w-full bg-gray-700 text-white p-3 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">

                        <label for="description1" class="block text-lg mt-6 mb-2">Description 1</label>
                        <textarea id="description1" name="description1" required
                            class="w-full bg-gray-700 text-white p-3 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"></textarea>

                        <label for="description2" class="block text-lg mt-6 mb-2">Description 2</label>
                        <textarea id="description2" name="description2" required
                            class="w-full bg-gray-700 text-white p-3 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"></textarea>

                        <label for="description3" class="block text-lg mt-6 mb-2">Description 3</label>
                        <textarea id="description3" name="description3" required
                            class="w-full bg-gray-700 text-white p-3 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"></textarea>
                    </div>

                    <!-- Second Column -->
                    <div>
                        <label for="description4" class="block text-lg mt-6 mb-2">Description 4</label>
                        <textarea id="description4" name="description4" required
                            class="w-full bg-gray-700 text-white p-3 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"></textarea>

                        <label for="price1" class="block text-lg mt-6 mb-2">Price 1</label>
                        <input type="number" id="price1" name="price1" required
                            class="w-full bg-gray-700 text-white p-3 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">

                        <label for="price2" class="block text-lg mt-6 mb-2">Price 2</label>
                        <input type="number" id="price2" name="price2" required
                            class="w-full bg-gray-700 text-white p-3 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">

                        <label for="price3" class="block text-lg mt-6 mb-2">Price 3</label>
                        <input type="number" id="price3" name="price3" required
                            class="w-full bg-gray-700 text-white p-3 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                    </div>

                    <!-- Save Button -->
                    <div class="col-span-1 md:col-span-2 mt-8">
                        <button type="submit"
                            class="w-full bg-blue-600 hover:bg-blue-700 text-white py-3 rounded-md text-lg transition-colors duration-300">
                            Add Event
                        </button>
                    </div>
                </form>
                <div class="gap-6 md:gap-8 mt-5 ml-64">
                    <h2 class="text-2xl font-bold text-center text-white mb-4">Existing Events</h2>
                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                        <% events.reverse().forEach(event=> { %>
                            <div class="bg-gray-800 p-6 rounded-lg shadow-lg">
                                <h3 class="text-xl font-semibold text-blue-400">
                                    <%= event.title %>
                                </h3>
                                <p class="mt-2 text-white">
                                    <%= event.description1 %>
                                </p>
                                <p class="mt-2 text-white">
                                    <%= event.description2 %>
                                </p>
                                <p class="mt-2 text-white">
                                    <%= event.description3 %>
                                </p>
                                <p class="mt-2 text-white">
                                    <%= event.description4 %>
                                </p>
                                <div class="mt-4">
                                    <span class="text-white">Price 1: ₹<%= event.price1 %></span><br>
                                    <span class="text-white">Price 2: ₹<%= event.price2 %></span><br>
                                    <span class="text-white">Price 3: ₹<%= event.price3 %></span>
                                </div>
                            </div>
                            <% }) %>
                    </div>
                </div>
            </div>
            </div>

</body>

</html>